<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F2F2F2">

        <com.project.ui.CommonTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:bottom_line_visibility="visible"
            app:icon_right1="@drawable/common_search_20"
            app:left_icon="@drawable/common_arrow_left_20"
            app:text="택시" />

        <ImageView
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/title_view"
            android:src="@drawable/bg_image_default_trans" />

        <LinearLayout
            android:id="@+id/catetory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/event"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_pretendard_medium"
                android:letterSpacing="-0.01"
                android:paddingStart="18dp"
                android:paddingTop="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="4dp"
                android:text="간편하게 어디로든 이동, 대구로 TAXI! "
                android:textColor="@color/color_333333"
                android:textSize="18dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="20dp"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_call" />

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon1"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="호출"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_card" />

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon2"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="mvvm"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_hitory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_taxi_breakdown" />

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon3"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="코틀린"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_my_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_my_info" />

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon4"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="마이페이지"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <RelativeLayout
                        android:id="@+id/rl_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon6"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_board" />

                        <TextView
                            android:id="@+id/name6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon6"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="알림"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_mileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon7"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_mileage" />

                        <TextView
                            android:id="@+id/name7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon7"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="마일리지"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon8"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_coupon" />

                        <TextView
                            android:id="@+id/name8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon8"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="쿠폰"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_safemessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon9"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/taxi_category_taxi_safemessage" />

                        <TextView
                            android:id="@+id/name9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon9"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="안심메시지"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_F2F2F2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E6E6E6" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lo_taxi_greeting"
                android:background="@color/color_E6E6E6"
                android:stretchColumns="1">

                <TableRow
                    android:id="@+id/lo_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@color/white"
                    android:paddingLeft="18dp"
                    android:paddingTop="20dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="14dp"
                        android:src="@drawable/taxi_notice" />

                    <TextView
                        android:id="@+id/tv_notice_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:letterSpacing="-0.01"
                        android:singleLine="true"
                        android:text="@string/msg_notice_empty"
                        android:textColor="@color/color_333333"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/lo_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="18dp"
                    android:paddingTop="20dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/taxi_event" />

                    <TextView
                        android:id="@+id/tv_event_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_pretendard_medium"
                        android:letterSpacing="-0.01"
                        android:singleLine="true"
                        android:text="@string/msg_event_empty"
                        android:textColor="@color/color_333333"
                        android:textSize="15dp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_E6E6E6" />


            </TableLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>