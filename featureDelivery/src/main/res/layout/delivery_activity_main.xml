<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F2F2F2">

        <com.project.ui.CommonTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:bottom_line_visibility="visible"
            app:icon_right1="@drawable/common_search_20"
            app:left_icon="@drawable/common_arrow_left_20"
            app:text="배달" />

        <ImageView
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/title_view"
            android:src="@drawable/bg_image_default_trans" />

        <LinearLayout
            android:id="@+id/catetory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/event"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_round_line_10"
                    android:backgroundTint="@color/color_333333_30" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:padding="20dp"
                android:rowCount="3">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_single"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_single" />

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon1"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="1인분"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_chiken"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_chicken" />

                        <TextView
                            android:id="@+id/name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon2"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="치킨"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_korea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_korean_food" />

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon3"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="한식"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_china"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_chinese_food" />

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon4"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="중식"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_.japan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon5"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_japanese_food" />

                        <TextView
                            android:id="@+id/name5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon5"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="일식"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill">

                    <RelativeLayout
                        android:id="@+id/rl_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon6"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_school_food" />

                        <TextView
                            android:id="@+id/name6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon6"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="분식"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_pig_hocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon7"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_pig_hocks" />

                        <TextView
                            android:id="@+id/name7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon7"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="족발보쌈"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_pizza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon8"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_pizza" />

                        <TextView
                            android:id="@+id/name8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon8"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="피자"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_cafe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon9"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_cafe" />

                        <TextView
                            android:id="@+id/name9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon9"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="카페"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1">

                    <RelativeLayout
                        android:id="@+id/rl_asia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:id="@+id/icon10"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/delivery_category_asian_food" />

                        <TextView
                            android:id="@+id/name10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon10"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:letterSpacing="-0.01"
                            android:text="아시안"
                            android:textColor="@color/color_333333"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>