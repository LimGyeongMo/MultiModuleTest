<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F2F2F2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대구로"
            android:textSize="30dp"
            android:fontFamily="@font/font_pretendard_bold"
            android:textColor="@color/color_01CAFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_delivery"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:background="@drawable/bg_round_area_6"
                android:backgroundTint="@color/white"
                android:foreground="@drawable/bg_round_line_6"
                android:foregroundTint="@color/color_333333_30">

                <TextView
                    android:id="@+id/tv_delivery_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/font_nanum_square_neo_heavy"
                    android:letterSpacing="-0.01"
                    android:text="배달/포장"
                    android:textColor="@color/color_333333"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_delivery_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_delivery_title"
                    android:fontFamily="@font/font_pretendard_regular"
                    android:letterSpacing="-0.01"
                    android:text="주문은 대구로\n배달은 댁으로"
                    android:textColor="@color/color_333333"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rl_taxi"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:background="@drawable/bg_round_area_6"
                android:backgroundTint="@color/white"
                android:foreground="@drawable/bg_round_line_6"
                android:foregroundTint="@color/color_333333_30">

                <TextView
                    android:id="@+id/tv_taxi_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/font_nanum_square_neo_heavy"
                    android:letterSpacing="-0.01"
                    android:text="택시호출"
                    android:textColor="@color/color_333333"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_taxi_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_taxi_title"
                    android:fontFamily="@font/font_pretendard_regular"
                    android:letterSpacing="-0.01"
                    android:text="대구 사람\n대구로 택시"
                    android:textColor="@color/color_333333"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rl_bus"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:background="@drawable/bg_round_area_6"
                android:backgroundTint="@color/white"
                android:foreground="@drawable/bg_round_line_6"
                android:foregroundTint="@color/color_333333_30">

                <TextView
                    android:id="@+id/tv_bus_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/font_nanum_square_neo_heavy"
                    android:letterSpacing="-0.01"
                    android:text="시내버스"
                    android:textColor="@color/color_333333"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_bus_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_bus_title"
                    android:fontFamily="@font/font_pretendard_regular"
                    android:letterSpacing="-0.01"
                    android:text="대구시내버스 정보"
                    android:textColor="@color/color_333333"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>